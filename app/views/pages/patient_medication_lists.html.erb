<div class="mb-4 sm:ml-10 lg:ml-0 font-sans w-8/12">
  <div class="flex flex-row items-center justify-around my-1 w-full h-14 relative align-bottom">
    <h1 class="p-5 text-xl font-bold text-left whitespace-nowrap text-gray-900 dark:text-white w-1/2">
      Medication List
    </h1>
  </div>
  <%= turbo_frame_tag "medication_lists", src: patient_medication_lists_path(@patient.id), loading: "lazy" do %>
   <div class="w-full flex flex-col items-center justify-center my-4 p-6">
      <i class="fas fa-spinner fa-spin text-8xl mr-2"></i>
      <span class="text-center mt-4">Loading Medication list ...</span>
    </div>
  <% end %>
</div>