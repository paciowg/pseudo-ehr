<div class="space-y-4">
  <!-- Address Section -->
  <div class="bg-green-50 dark:bg-gray-700 p-4 rounded-lg h-32">
    <div class="flex items-center mb-3">
      <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <h6 class="text-md font-medium text-green-700 dark:text-green-300">Address</h6>
    </div>
    <div class="pl-7 overflow-auto">
      <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.address %></p>
    </div>
  </div>

  <!-- Phone Section -->
  <div class="bg-teal-50 dark:bg-gray-700 p-4 rounded-lg h-32">
    <div class="flex items-center mb-3">
      <svg class="w-5 h-5 text-teal-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      <h6 class="text-md font-medium text-teal-700 dark:text-teal-300">Phone</h6>
    </div>
    <div class="pl-7 overflow-auto">
      <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base">
        <a href="tel:<%= @patient.phone %>" class="hover:text-teal-600 dark:hover:text-teal-400 transition-colors">
          <%= @patient.phone %>
        </a>
      </p>
    </div>
  </div>

  <!-- Email Section -->
  <div class="bg-indigo-50 dark:bg-gray-700 p-4 rounded-lg h-32">
    <div class="flex items-center mb-3">
      <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <h6 class="text-md font-medium text-indigo-700 dark:text-indigo-300">Email</h6>
    </div>
    <div class="pl-7 overflow-auto">
      <p class="text-gray-800 dark:text-white font-medium break-words text-sm md:text-base">
        <a href="mailto:<%= @patient.email %>" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors break-all">
          <%= @patient.email %>
        </a>
      </p>
    </div>
  </div>
</div>
