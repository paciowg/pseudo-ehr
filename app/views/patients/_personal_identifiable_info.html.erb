<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <div class="bg-blue-50 dark:bg-gray-700 p-4 rounded-lg h-64">
    <div class="flex items-center mb-3">
      <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h6 class="text-md font-medium text-blue-700 dark:text-blue-300">Identity</h6>
    </div>
    <div class="space-y-3 overflow-auto">
      <div>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">FIRST NAME</p>
        <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.first_name %></p>
      </div>
      <div>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">LAST NAME</p>
        <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.last_name %></p>
      </div>
      <div>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">DATE OF BIRTH</p>
        <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.dob %></p>
      </div>
    </div>
  </div>

  <div class="bg-purple-50 dark:bg-gray-700 p-4 rounded-lg h-64">
    <div class="flex items-center mb-3">
      <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      <h6 class="text-md font-medium text-purple-700 dark:text-purple-300">Gender & Status</h6>
    </div>
    <div class="space-y-3 overflow-auto">
      <div>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">GENDER IDENTITY</p>
        <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.gender.capitalize %></p>
      </div>
      <div>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">SEX ASSIGNED AT BIRTH</p>
        <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.birthsex.capitalize %></p>
      </div>
      <div>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">MARITAL STATUS</p>
        <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.marital_status.capitalize %></p>
      </div>
    </div>
  </div>

  <% if @patient.medical_record_number.present? %>
  <div class="md:col-span-2 bg-gray-50 dark:bg-gray-700 p-4 rounded-lg h-32">
    <div class="flex items-center mb-3">
      <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"></path>
      </svg>
      <h6 class="text-md font-medium text-gray-700 dark:text-gray-300">Medical Record</h6>
    </div>
    <div class="overflow-auto">
      <p class="text-xs font-semibold text-gray-500 dark:text-gray-400">MEDICAL RECORD NUMBER</p>
      <p class="text-gray-800 dark:text-white font-medium text-sm md:text-base"><%= @patient.medical_record_number %></p>
    </div>
  </div>
  <% end %>
</div>
