<!-- Patient Update Modal -->
<div data-controller="modal" data-modal-open-value="false" data-action="click->modal#clickOutside" id="updatePatientModal" data-modal-target="container" class="fixed inset-0 bg-gray-900 bg-opacity-60 hidden items-center justify-center z-50 transition-opacity duration-300 ease-in-out">
  <div data-modal-target="content" class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-3xl w-full max-h-[90vh] overflow-y-auto transform transition-transform duration-300 ease-in-out scale-95 opacity-0">
    <div class="relative">
      <!-- Modal Header with gradient background -->
      <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-6 rounded-t-xl">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-white flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Update Patient Information
          </h2>
          <button data-action="modal#close" class="text-white hover:text-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded-full p-1">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <p class="text-blue-100 mt-2">Update <%= @patient.name %>'s information below</p>
      </div>

      <!-- Form Content -->
      <div class="p-6">
        <%= form_with url: patient_path(@patient.id), method: :patch, class: "space-y-6", data: { action: "turbo:submit-end->modal#close" } do |f| %>
          <!-- Personal Information Section -->
          <div class="bg-blue-50 dark:bg-gray-700 p-5 rounded-lg shadow-inner">
            <h3 class="text-lg font-medium text-blue-700 dark:text-blue-300 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Personal Information
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
              <div class="group">
                <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-blue-600 transition-colors" %>
                <%= f.text_field "patient[first_name]", value: @patient.first_name, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all" %>
              </div>
              <div class="group">
                <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-blue-600 transition-colors" %>
                <%= f.text_field "patient[last_name]", value: @patient.last_name, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all" %>
              </div>
              <div class="group">
                <%= f.label :dob, "Date of Birth", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-blue-600 transition-colors" %>
                <%= f.date_field "patient[dob]", value: @patient.dob, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all" %>
              </div>
              <div class="group">
                <%= f.label :gender, "Gender", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-blue-600 transition-colors" %>
                <%= f.select "patient[gender]",
                  options_for_select([
                    ["Male", "male"],
                    ["Female", "female"],
                    ["Other", "other"],
                    ["Unknown", "unknown"]
                  ], @patient.gender),
                  {},
                  { class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all" }
                %>
              </div>
            </div>
          </div>

          <!-- Contact Information Section -->
          <div class="bg-green-50 dark:bg-gray-700 p-5 rounded-lg shadow-inner">
            <h3 class="text-lg font-medium text-green-700 dark:text-green-300 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Contact Information
            </h3>
            <div class="space-y-5">
              <div class="group">
                <%= f.label :address, "Address", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-green-600 transition-colors" %>
                <%= f.text_field "patient[address]", value: @patient.address, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all", placeholder: "Street, City, State, Postal Code, Country" %>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Format: Street, City, State, Postal Code, Country</p>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div class="group">
                  <%= f.label :phone, "Phone", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-green-600 transition-colors" %>
                  <%= f.telephone_field "patient[phone]", value: @patient.phone, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all" %>
                </div>
                <div class="group">
                  <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1 group-focus-within:text-green-600 transition-colors" %>
                  <%= f.email_field "patient[email]", value: @patient.email, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white transition-all" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-end space-x-4 pt-2">
            <button type="button" data-action="modal#close" class="px-5 py-2.5 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 dark:bg-gray-600 dark:text-white dark:hover:bg-gray-500 dark:focus:ring-gray-500">
              Cancel
            </button>
            <%= f.button type: "submit", class: "px-5 py-2.5 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-blue-600 flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Update Patient
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
