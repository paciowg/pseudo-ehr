<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    Advance Directives (<%= @advance_directives.count %>)
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>

      <tr>
        <th scope='col'>Title</th>
        <th scope='col'>Type</th>
        <th scope='col'>Date</th>
        <th scope='col'>Status</th>
        <th scope='col'>Relates To</th>
      </tr>
      <% @advance_directives.each do |advance_directives| %>
        <tr>
          <td><%= link_to advance_directives.title, composition_path(advance_directives.id) %></td>
          <td><%= advance_directives.type.coding.first.display %></td>
          <td><%= display_date(advance_directives.date.to_date) %></td>
          <td><%= advance_directives.doc_ref_status %></td>
          <td>

            <% if advance_directives.related_composition.present? %>
              <b><%= advance_directives.doc_ref_relatesTo_code %></b><br>
              <%= link_to advance_directives.related_composition.title, composition_path(advance_directives.related_composition.id) %>
            <% else %>
              --
            <% end %>

          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
