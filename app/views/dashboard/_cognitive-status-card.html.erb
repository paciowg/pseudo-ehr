<div class='card bg-dark text-white h-100'>
  <div class='card-header'>
    <%= link_to "Cognitive Status", cognitive_status_index_path(patient: @patient.id) %>
  </div>
  <div class='card-body'>
    <table class='table table-striped table-dark status'>
       
      <% @cognitive_statuses.each do |cognitive_status| %>
        <tr>
          <td><%= display_date(cognitive_status.effective) %></td>
          <td><%= link_to display_code(cognitive_status.code), 
                        cognitive_status_path(id: cognitive_status.id) %></td>
          <!--<td><%= display_performers(cognitive_status.performer) %></td>-->
        </tr>
      <% end %>
    </table>
  </div>
</div>
