<div class="w-full mb-6 bg-white border border-gray-200 rounded-lg shadow-md transition-all hover:shadow-lg">
  <% body_id = "accordion-body-#{identifier}" %>
  <h5 id="accordion-heading-<%= identifier %>" class="mb-0">
    <button class="flex items-center justify-between w-full p-5 font-medium text-left text-gray-900 bg-gray-100 hover:bg-gray-200 transition-colors rounded-t-lg focus:outline-none focus:ring-2 focus:ring-blue-300"
            data-accordion-target="#<%= body_id %>"
            aria-expanded="true"
            aria-controls="<%= body_id %>">
      <div class="flex items-center">
        <span class="text-lg"><%= adis.first.type %></span>
        <span class="ml-3 bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full"><%= adis.count %> documents</span>
      </div>
      <svg data-accordion-icon class="w-4 h-4 rotate-180 shrink-0 transition-transform" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
      </svg>
    </button>
  </h5>
  <div id="<%= body_id %>" class="overflow-hidden transition-all duration-300" aria-labelledby="accordion-heading-<%= identifier %>">
    <div class="p-5">
      <%= render "adis_table", adis: adis %>
    </div>
  </div>
</div>
