<%= turbo_frame_tag "adis" do %>
  <div class="container mx-auto px-4 py-6">
    <% if @adis.empty? %>
      <div class="flex flex-col items-center justify-center p-8 bg-gray-50 rounded-lg shadow-sm">
        <svg class="w-16 h-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h1 class="text-xl font-semibold text-gray-700 mb-2">No Advance Directives Found</h1>
        <p class="text-gray-500 text-center max-w-md">There are no advance directives available for this patient at this time.</p>
      </div>
    <% else %>
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Advance Directives</h2>
        <p class="text-gray-600">View and manage patient advance directives and related documents.</p>
      </div>

      <div id="accordion" data-accordion="open" class="space-y-4">
        <% @adis.each do |identifier, adis| %>
          <%= render "adis_category", adis: adis, identifier: identifier %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
